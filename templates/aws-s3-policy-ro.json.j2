{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AnsibleRoleList",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucketMultipartUploads",
                "s3:ListBucket",
                "s3:ListMultipartUploadParts"
            ],
            "Resource": [
                "arn:aws:s3:::{{ item.bucket }}",
                "arn:aws:s3:::{{ item.bucket }}/*"
            ]
        },
        {
            "Sid": "AnsibleRoleRead",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject*"
            ],
            "Resource": "arn:aws:s3:::{{ item.bucket }}/{{ item.object |d('*') }}"
        }
    ]
}
