{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AnsibleR53list",
            "Effect": "Allow",
            "Action": [
                "route53:ListHostedZones"
            ],
            "Resource": [
                "*"
            ]
        },
        {
            "Sid": "AnsibleR53ChangeRRset",
            "Action": [
                "route53:ChangeResourceRecordSets",
                "route53:ListResourceRecordSets"
            ],
            "Effect": "Allow",
            "Resource": "arn:aws:route53:::hostedzone/{{ item.zone_id }}"
        }
    ]
}
